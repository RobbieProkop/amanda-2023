---
import Hero from "../components/Hero.astro";
import ServiceDropDown from "../components/ServiceDropDown.jsx";
import ReadyToBook from "../components/ReadyToBook.astro";
import Layout from "../layouts/Layout.astro";

const services = await Astro.glob("../helpers/services/*.md");
---

<Layout title="Amanda Prokop RMT">
  <!-- Hero -->
  <Hero title="Services" color="orange" image="assets/servicesHero.jpeg" overlay={true} />
  <!-- Services -->

  <ServiceDropDown client:load services={services} />

  <ReadyToBook />
</Layout>
