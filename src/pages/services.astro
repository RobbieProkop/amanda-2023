---
import Hero from "../components/Hero.astro";
import ServiceDropDown from "../components/ServiceDropDown.jsx";
import ReadyToBook from "../components/ReadyToBook.astro";
import hero from "/assets/webp/servicesHero.webp";
import Layout from "../layouts/Layout.astro";

const services = await Astro.glob("../helpers/services/*.md");
const description = "A variety of services are offered, including Trauma-Informed Massage, Relaxation Massage, Therapeutic Massage, Cupping, Craniosacral Therapy, Raindrop Therapy, and Reiki. Click here for more information"
---

<Layout title="Services" description={description}>
  <!-- Hero -->
  <Hero title="Services" color="orange" image={hero} overlay={true} />
  <!-- Services -->

  <ServiceDropDown client:load services={services} />

  <ReadyToBook />
</Layout>
