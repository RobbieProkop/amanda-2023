---
import logo from "/assets/webp/AP_altOrange.webp";
import insta from "/assets/insta.png";
import envelope from "/assets/envelope.png";
import telephone from "/assets/telephone.png";
import "../styles/footer.scss";
---

<footer class="footer">
  <div class="container">
    <div class="left">
      <p>COPYRIGHT 2023</p>
      <p class="dhamma">
        Made by <a href="https://dhammadevs.com">DhammDevs</a>
      </p>
    </div>
    <div class="logo">
      <picture>
        <source
          type="image/avif"
          srcset="
      /assets/avif/AP_altOrange.avif?width=100 100w,
      /assets/avif/AP_altOrange.avif?width=200 200w,
      /assets/avif/AP_altOrange.avif?width=400 400w,
      /assets/avif/AP_altOrange.avif?width=800 800w,
      "
        />
        <img
          src={logo}
          alt="hero logo"
          role="presentation"
          fetchpriority="high"
          decoding="async"
          class="logo-image"
        />
      </picture>
    </div>
    <div class="socials">
      <a href="https://www.instagram.com/ap.rmt/" target="_blank" class="social"
        ><img src={insta} alt="instagram" /><p>@ap.rmt</p></a
      >
      <div class="social">
        <img src={telephone} alt="telephone logo" /><p>403-835-0046</p>
      </div>
      <a href="mailto:amandaprokop.rmt@gmail.com"
        ><img src={envelope} alt="email logo" /> amandaprokop.rmt@gmail.com</a
      >
    </div>
  </div>
</footer>
